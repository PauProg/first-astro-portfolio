---
const { title, description, anchor } = Astro.props;
---

<a href={anchor} class="relative p-6 border-gray-700 hover:border-gray-500 rounded-lg border-2 transition-all hover:translate-y-[-5px] duration-[.5s]">
    <h3 class="text-xl font-bold">{title}</h3>
    <p>{description}</p>
    <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="absolute top-[15px] right-[10px] opacity-0 transition-opacity duration-300 ease-in-out"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M17 7l-10 10"></path><path d="M8 7l9 0l0 9"></path></svg
    >
</a>

<style>
    a:hover svg{
        opacity: 1;
    }
</style>
