---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import ImagenAvatar from "../images/avatar.webp";
import JobButton from "../components/JobButton.astro";
import Project from "../components/Project.astro";
import ClickeduImg from "../images/clickedu.webp";
import HoopImg from "../images/hoopconnect.webp";
import PortfolioImg from "../images/portfolio.webp";
import LittleProject from "../components/LittleProject.astro";
---

<Layout title="Portfolio test">
	<main>
		<div class="flex w-full align-center justify-between mt-20">
			<Image
				src={ImagenAvatar}
				alt="Avatar"
				class="w-[29%] rounded-full border-solid border-[#171E2D] border-8"
			/>
			<div
				class="flex flex-col justify-center align-center gap-2 w-[65%]"
			>
				<h1 class="text-white text-4xl font-bold">Pau MV</h1>
				<p class="text-[#C2CBD8] text-xl mb-4">
					Passionate web developer student
				</p>
				<JobButton title="Looking for job" />
			</div>
		</div>
		<div class="w-full bg-gray-600 h-[1px] mt-14 mb-14"></div>
		<div>
			<h2 class="flex items-center text-2xl font-bold">
				Studies
				<svg
					width="34"
					height="34"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="text-gray-400"
					><path stroke="none" d="M0 0h24v24H0z" fill="none"
					></path><path
						d="M6 6m0 2a2 2 0 0 1 2 -2h8a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-8a2 2 0 0 1 -2 -2z"
					></path><path d="M9 6v-1a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v1"
					></path><path d="M6 10h12"></path><path d="M6 16h12"
					></path><path d="M9 20v1"></path><path d="M15 20v1"
					></path></svg
				>
			</h2>
			<p class="mt-3 text-base opacity-85">
				Now studying an IT course Â· Sabadell, Spain
			</p>
			<ul class="list-disc ml-5 mt-3 opacity-75">
				<li class="mb-2">Word Certificate</li>
				<li class="mb-2">Excel Certificate</li>
				<li class="mb-2">ESO Title</li>
			</ul>
		</div>
		<div class="mt-10">
			<h2 class="flex items-center font-extrabold text-2xl gap-2 mb-5">
				Projects
				<svg
					width="24"
					height="24"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="text-gray-400"
					><path stroke="none" d="M0 0h24v24H0z" fill="none"
					></path><path
						d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z"
					></path></svg
				>
			</h2>
			<div class="flex flex-col gap-8">
				<Project
					src={HoopImg}
					alt="HoopConnect project image"
					title="HoopConnect Website"
					description="I made this website for a school project because I'd to create a business"
					github="https://github.com/PauProg/hoopconnect-website"
					anchor="https://pauprog.github.io/hoopconnect-website/"
				/>
				<Project
					src={ClickeduImg}
					alt="Clickedu project image"
					title="Clickedu clone"
					description="A clone of a school organization platform named Clickedu"
					github="https://github.com/PauProg/clickedu-clone"
					anchor="https://pauprog.github.io/clickedu-clone/"
				/>
				<Project
					src={PortfolioImg}
					alt="Portfolio project image"
					title="Portfolio"
					description="This is my portfolio, where I show my projects and my skills"
					github="https://github.com/PauProg/personal-portfolio"
					anchor="https://pauprog.github.io/personal-portfolio/"
				/>
			</div>
			<div class="grid grid-cols-2 gap-6 mt-12">
				<LittleProject
					anchor="https://github.com/PauProg/photocode-mockup"
					title="Photocode Mockup"
					description="This app is only functional on mobile"
				/>
				<LittleProject
					anchor="https://github.com/PauProg/first-js-project"
					title="My first JS project"
					description="A very simple project made with JS"
				/>
				<LittleProject
					anchor="https://github.com/PauProg/linktree"
					title="Linktree"
					description="A website width some links to my social media"
				/>
				<LittleProject
					anchor="https://github.com/PauProg/pokemon-web"
					title="Pokemon website"
					description="A website I made for the school"
				/>
				<LittleProject
					anchor="https://github.com/PauProg/Starbucks-clone"
					title="Starbucks Website"
					description="A starbucks website clone made with HTML and CSS"
				/>
				<LittleProject
					anchor="https://github.com/PauProg/batman-responsive"
					title="Batman Website"
					description="On this website is the first time I used media queries"
				/>
			</div>
			<div>
				<h2
					class="flex content-center items-center gap-4 text-2xl font-extrabold mt-12 mb-5"
				>
					Socials
					<svg
						width="30"
						height="30"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="3"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="text-gray-500"
						><path stroke="none" d="M0 0h24v24H0z" fill="none"
						></path><path
							d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"
						></path><path
							d="M16 12v1.5a2.5 2.5 0 0 0 5 0v-1.5a9 9 0 1 0 -5.5 8.28"
						></path></svg
					>
				</h2>
				<div class="flex gap-3">
					<a href="https://www.instagram.com/_pau.mvz/" class="flex content-center items-center gap-2 text-orange-400 border-2 border-gray-700 hover:border-gray-500 px-3 py-4 rounded-lg transition-all duration-[.5s]">
						<svg
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="icon icon-tabler icons-tabler-outline icon-tabler-brand-instagram"
							><path stroke="none" d="M0 0h24v24H0z" fill="none"
							></path><path
								d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
							></path><path
								d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"
							></path><path d="M16.5 7.5l0 .01"></path></svg
						>
						<h3>Instagram</h3>
					</a>
					<a href="https://github.com/PauProg" class="flex content-center items-center gap-2 border-2 border-gray-700 hover:border-gray-500 px-3 py-4 rounded-lg transition-all duration-[.5s]">
						<svg
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
							><path stroke="none" d="M0 0h24v24H0z" fill="none"
							></path><path
								d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
							></path></svg
						>
						<h3>GitHub</h3>
					</a>
					<a href="https://www.youtube.com/channel/UCjfPRgLyomtkef9y-3o7BRQ" class="flex content-center items-center gap-2 text-red-400 border-2 border-gray-700 hover:border-gray-500 px-3 py-4 rounded-lg transition-all duration-[.5s]">
						<svg
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="icon icon-tabler icons-tabler-outline icon-tabler-brand-youtube"
							><path stroke="none" d="M0 0h24v24H0z" fill="none"
							></path><path
								d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z"
							></path><path d="M10 9l5 3l-5 3z"></path></svg
						>
						<h3>YouTube</h3>
					</a>
				</div>
			</div>
		</div>
	</main>
</Layout>
